@model Project2_Sem3.Models.Service

@{
    ViewData["Title"] = "Service Detail";
    var service = ViewBag.Service as Project2_Sem3.Models.Service;
}

<link rel="stylesheet" href="~/css/Team.css" asp-append-version="true" />

<div class="breadcrumb-area bg-image section-ptb" style="background-image: url(/images/bg/breadcrumb-bg.jpg)">
    <div class="container">
        <div class="row breadcrumb">
            <div class="col">
                <h2>Service</h2>
                <ul class="breadcrumb-list">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                    <li class="breadcrumb-item active">Service Detail</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<main class="page-content">

    <!-- Start Service Style-->
    <div class="section-service bg-gray section-pt section-pb">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-lg-12">
                    <div class="service-details-content">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="service-details-lg-image">
                                    <img src="@service?.ServiceImg" alt="Service Image">
                                </div>
                                <div class="service-details-cont mt-30">
                                    <h4 class="service-title">@service?.Name</h4>
                                    <p>@service?.Description</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Service Style-->

</main>
