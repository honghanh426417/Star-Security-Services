@model List<Project2_Sem3.Models.Service>

@{
    ViewData["Title"] = "Index";
}


<div class="breadcrumb-area bg-image section-ptb" style="background-image: url(/images/bg/breadcrumb-bg.jpg)">
    <div class="container">
        <div class="row breadcrumb">
            <div class="col">
                <h2>Servcie</h2>
                <!-- breadcrumb-list start -->
                <ul class="breadcrumb-list">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                    <li class="breadcrumb-item active">Service</li>
                </ul>
                <!-- breadcrumb-list end -->
            </div>
        </div>Ω
    </div>
</div>

<main class="page-content">

    <!-- Start Service Style-->
    <div class="section-service bg-gray section-pt section-pb-90">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title text-center">
                        <h2>Our Services</h2>
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit sed do eiusmod tempor incididunt ut labore</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="row">
                    @if (ViewBag.Services != null)
                    {
                        @foreach (var service in ViewBag.Services)
                        {
                            <div class="col-lg-4 col-md-6 col-12">
                                <!-- Start Single Service -->
                                <div class="service text-center service-2 padding-none cleaning-service mb-30">
                                    <div class="thumb">
                                        <a href="@Url.Action("Details", "Service", new { id = service.Id })">
                                            <img src="@service.ServiceImg" alt="service img">
                                        </a>
                                    </div>
                                    <div class="content">
                                        <h4><a href="#">@service.Name</a></h4>
                                        <p>Lorem ipsum dolor sit amet ectetur adipelitl sed do eiusmod tempor incidid</p>
                                        <a class="readmore_btn btn-transparent" href="@Url.Action("Details", "Service", new { id = service.Id })">READ MORE</a>
                                    </div>
                                </div>
                                <!-- End Single Service -->
                            </div>
                        }
                    }
                </div>
            </div>
            </div>
        </div>
    </div>
    <!-- End Service Style-->


</main>

